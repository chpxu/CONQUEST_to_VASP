#!/usr/bin/env bash
set -e
if [[ ! -d "/home/chunix/git_projects/CONQUEST_to_VASP" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/chunix/git_projects/CONQUEST_to_VASP")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/chunix/git_projects/CONQUEST_to_VASP" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/chunix/git_projects/CONQUEST_to_VASP/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/chunix/git_projects/CONQUEST_to_VASP/.envrc" "/home/chunix/git_projects/CONQUEST_to_VASP/.direnv"/*.rc
